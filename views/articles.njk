{% extends 'partials/layout.njk' %}
{% block content %}
    <h1>Articles</h1>
    <a href="/articles/new">new article</a>
    <table>
        <thead>
            <th>ID</th>
            <th>Title</th>
            <th>body</th>
            <th>Actions</th>
        </thead>
        <tbody>
            {% for article in articles %}
            <tr>
                <th>{{article.id}}</th>
                <th>{{article.title}}</th>
                <th>{{article.body}}</th>
                <td>
                    <a href="/articles/edit?id={{article.id}}">edit</a>
                    <a href="/articles/delete?id={{article.id}}">delete</a>
                </td>
                
            </tr>
            {% endfor %}
            </tbody>
            </table>
{% endblock %}